<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Activity.
    -->
    <changeSet id="20190828094813-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="challenge_id"
                                 baseTableName="activity"
                                 constraintName="fk_activity_challenge_id"
                                 referencedColumnNames="id"
                                 referencedTableName="challenge"/>

        <addForeignKeyConstraint baseColumnNames="activities_id"
                                 baseTableName="activity_dimension"
                                 constraintName="fk_activity_dimension_activities_id"
                                 referencedColumnNames="id"
                                 referencedTableName="activity"/>
        <addForeignKeyConstraint baseColumnNames="dimensions_id"
                                 baseTableName="activity_dimension"
                                 constraintName="fk_activity_dimension_dimensions_id"
                                 referencedColumnNames="id"
                                 referencedTableName="dimension"/>
        
    </changeSet>
</databaseChangeLog>
